{
  "name": "tmuxy",
  "version": "1.0.0",
  "private": true,
  "description": "A tmux terminal wrapper - available as Tauri app or web server",
  "workspaces": [
    "packages/tmuxy-ui",
    "packages/tmuxy-landing-page"
  ],
  "scripts": {
    "devcontainer": "bash scripts/devcontainer.sh",
    "devcontainer:build": "bash scripts/devcontainer.sh --build",
    "yolo-mode": "bash scripts/devcontainer.sh --cmd 'claude --dangerously-skip-permissions'",
    "build": "npm run build -w tmuxy-ui && cargo build --release -p tmuxy-server && cd packages/tauri-app && tauri build",
    "start": "pm2 start ./scripts/dev.sh --name tmuxy-dev --cwd /workspace",
    "stop": "pm2 stop tmuxy-dev",
    "logs": "pm2 logs tmuxy-dev",
    "tauri:dev": "cargo tauri dev --manifest-path packages/tauri-app/Cargo.toml",
    "tauri:build": "./scripts/build-tauri.sh",
    "test": "npm run test -w tmuxy-ui",
    "test:e2e": "jest --runInBand",
    "lint:tests": "eslint tests/",
    "prepare": "git config core.hooksPath .githooks"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.9.0",
    "eslint-plugin-jest": "^29.15.0",
    "jest": "^29.7.0",
    "playwright": "^1.58.0",
    "pm2": "^6.0.14",
    "sharp": "^0.34.5"
  }
}
